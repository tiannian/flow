version ^0.1.0;

import Flow;

module IfStatement {
    in: ->Flow.Port.Audio;
    if: ->Flow.Port.Bool;
    outTrue, outFalse: <-Flow.Port.Audio;
    wire: in -> outTrue;
}

hook If for IfStatement.if {
    onTrue = toOutTrue;
    onFalse = toOutFalse;
}

script toOutTrue {
    wire => outTrue;
}

script toOutFalse {
    wire => outFalse;
}
